<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.FragmentAddProjet">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/logo_img"
                android:background="@drawable/border_edittext"
                android:layout_marginTop="10dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ajouter Un Projet "
                android:textAlignment="center"
                android:textSize="30dp"
                android:textColor="@color/red"
                android:textStyle="bold"
                android:layout_marginTop="30dp"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/imgLangage"
            android:layout_width="320dp"
            android:layout_height="220dp"
            android:background="@drawable/border_edittext"
            android:src="@drawable/add"
            android:backgroundTint="#DDD8D8"
            android:layout_marginTop="10dp"/>
        <EditText
            android:id="@+id/nLangage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name Langage"
            android:textAlignment="center"
            android:layout_marginTop="40dp"
            android:textSize="25dp"
            android:textColor="@color/red"/>
        <EditText
            android:id="@+id/nameDevelopper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Developper par ..."
            android:textAlignment="center"
            android:layout_marginTop="50dp"
            android:textSize="20dp"/>
        <Button
            android:id="@+id/ajouterProjet"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="140dp"
            android:backgroundTint="#32828C"
            android:text="Ajouter Le Projet "
            android:textSize="30dp"/>
    </LinearLayout>
</FrameLayout>