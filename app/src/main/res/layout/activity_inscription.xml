<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Inscription">
    <TextView
        android:id="@+id/ti"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign Up "
        android:textAlignment="center"
        android:textSize="30dp"
        android:textStyle="italic"
        android:textColor="#3249CA"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ti"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp">
        <EditText
            android:id="@+id/editName"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="30dp"
            android:drawableLeft="@drawable/account"
            android:drawablePadding="10dp"
            android:padding="10dp"
            android:background="@drawable/border_edittext"
            android:hint="saiser name"
            android:inputType="text" />

        <EditText
            android:id="@+id/editPrenom"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/editName"
            android:layout_marginTop="25dp"
            android:drawableLeft="@drawable/baseline_person_24"
            android:drawablePadding="10dp"
            android:padding="10dp"
            android:background="@drawable/border_edittext"
            android:hint="saiser prenom"
            android:inputType="text" />

        <EditText
            android:id="@+id/editPhone"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/editPrenom"
            android:layout_marginTop="25dp"
            android:drawableLeft="@drawable/baseline_phone_24"
            android:drawablePadding="10dp"
            android:padding="10dp"
            android:background="@drawable/border_edittext"
            android:hint="number phone"
            android:inputType="number" />

        <EditText
            android:id="@+id/editMail"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/editPhone"
            android:layout_marginTop="28dp"
            android:drawableLeft="@drawable/baseline_email_24"
            android:drawablePadding="10dp"
            android:hint="saiser L'email"
            android:padding="10dp"
            android:background="@drawable/border_edittext"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/editPassword"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/editMail"
            android:layout_marginTop="25dp"
            android:drawableLeft="@drawable/baseline_lock_24"
            android:drawablePadding="10dp"
            android:hint="mot de passe "
            android:padding="10dp"
            android:background="@drawable/border_edittext"
            android:inputType="textPassword" />

        <CheckBox
            android:id="@+id/checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editPassword"
            android:layout_marginTop="25dp"
            android:text="si tout les champs est valide "
            android:textColor="@color/bleu"
            android:textSize="18dp" />

        <Button
            android:id="@+id/inscrire"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/checkbox"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/bleu"
            android:text="S'inscrir"
            android:textSize="25dp" />

        <Button
            android:id="@+id/cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/inscrire"
            android:layout_marginTop="5dp"
            android:backgroundTint="#A9A9AC"
            android:text="Cancel"
            android:textSize="25dp" />
    </RelativeLayout>
</RelativeLayout>